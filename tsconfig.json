{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": ".",
  "paths": {
    "@components/*": ["components/*"],
    "@hooks/*": ["hooks/*"],
    "@services/*": ["services/*"],
    "@styles/*": ["styles/*"],
    "@utils/*": ["utils/*"],
    "@types/*": ["types/*"],
    "@public/*": ["public/*"],
    "@assets/*": ["assets/*"],
    "@pages/*": ["pages/*"],
    "@lib/*": ["lib/*"],
    "@context/*": ["context/*"],
    "@store/*": ["store/*"],
    "@config/*": ["config/*"],
    "@middleware/*": ["middleware/*"],
    "@tests/*": ["tests/*"],
    "@mocks/*": ["mocks/*"],
  }
}
